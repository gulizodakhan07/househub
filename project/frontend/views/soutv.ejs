<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HouseHub - Ijara Page</title>
    <style>
        .main-card-wrap {
            display: flex;
            gap: 45px;
            width: 100vw;
            padding: 10px;
            flex-wrap: wrap;
        }
        .main-card {
            position: relative;
            width: 230px;
            height: 350px;
            background-color: aqua;
            padding: 15px;
            box-shadow: 2px 2px 15px 2px #ccc;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            overflow: hidden; 
        }
        .main-card:hover {
            transform: scale(1.05);
        }
        .label {
            position: absolute;
            top: 12px; 
            left: -32px;
            width: 110px;
            height: 25px;
            background-color: red;
            display: flex;
            justify-content: center;
            align-items: center;
            transform: rotate(-45deg);
            font-weight: bold;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        }
        h1 {
            text-align: center;
            color: #ff0000;
            text-shadow: 0 0 10px rgba(255, 0, 0, 0.8);
            font-size: 3em;
            font-weight: bold; 
        }
    </style>
</head>
<body>
    <h1>Sotuvdagi uylar</h1>
    <div class="main-card-wrap">
        <% if (allHouses && allHouses.length > 0) { %>
            <% allHouses.forEach(house => { %>
                <% if (house.to_give === "sotuv") { %>
                    <div class="main-card">
                        <div class="label">sotuv</div>
                        <p>Images: <%= house.images %></p>
                        <hr>
                        <h3>Title: <%= house.title %></h3>
                        <p>Price: <%= house.price %></p>
                        <p><%= house.type %></p>
                        <p>Rating: <%= house.rating %></p>
                    </div>
                <% } %>
            <% }); %>
        <% } else { %>
            <p>House not found.</p>
        <% } %>
    </div>
</body>
</html>
