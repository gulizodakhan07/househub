{{> header}}

<h1>Add New Listing</h1>
<form action="/add-listing" method="POST" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required>

    <label for="price">Price</label>
    <input type="number" id="price" name="price" required>

    <label for="number_of_rooms">Number of Rooms</label>
    <input type="text" id="number_of_rooms" name="number_of_rooms" required>

    <label for="address">Address</label>
    <input type="text" id="address" name="address" required>

    <label for="material">Material</label>
    <input type="text" id="material" name="material" required>

    <label for="to_give">Listing Type</label>
    <select id="to_give" name="to_give" required>
        <option value="ijara">Ijara</option>
        <option value="sotuv">Sotuv</option>
    </select>

    <label for="rating">Rating</label>
    <input type="number" id="rating" name="rating" min="1" max="5">

    <label for="image_url">Upload Image</label>
    <input type="file" id="image_url" name="image_url">

    <button type="submit">Add Listing</button>
</form>

{{> footer}}

