<main>
    <h1>Product Listings</h1>

    {{#if products.length}}
        <ul>
            {{#each products}}
            <li>
                <h2>{{this.title}}</h2>

                {{#if this.images.length}}
                    <img src="{{this.images.[0]}}" alt="{{this.title}}" style="width:200px; height:auto;">
                {{else}}
                    <p>No image available</p>
                {{/if}}

                <p>{{this.description}}</p>

                {{#if this.price}}
                    <p>Price: ${{this.price}}</p>
                {{else}}
                    <p>Price not available</p>
                {{/if}}

                <p>Added on: {{this.createdAt}}</p>
            </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No products available yet. <a href="/add-listing">Add a new listing</a></p>
    {{/if}}
</main>

